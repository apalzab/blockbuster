<div class="container">
  <div class="page-header">
    <header><h1>Movies</h1></header>
  </div>

  <div id="movies" class="movies">
    <% cache do %>
      <% @movies.each_slice(3).each do |row_of_movies| %>
        <div class="row">
          <% row_of_movies.each do |movie| %>
            <%= render movie %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
   
  <div id="infinite-scrolling">
    <%= will_paginate %>
  </div>

</div>
 